.classifier
  .subject
    background: MEDIUM_GRAY
    border-radius: 5px
    cursor: crosshair
    position: relative
    text-align: center

  .marking-surface
    display: block
    height: 440px
    margin: 0 auto
    max-height: 100%
    max-width: 100%
    width: 770px

  .tag-marker
    fill: rgba(#fff, 0.8)

    &:hover
      fill: #fff

  .tag-label
    fill: #666
    font-family: inherit
    font-size: inherit
    pointer-events: none
